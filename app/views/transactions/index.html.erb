<h2>Financial Transactions for <%= @client.full_name %></h2>

<%= link_to 'New Transaction', new_client_transaction_path(@client), class: 'btn btn-primary' %>

<div class="col-6 top-padding-with-radius">
  <table class="table table-striped table-sm">
    <tr>
      <th>Date</th>
      <th>Amount</th>
    </tr>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= display_date(transaction.created_at) %></td>
        <td><%= number_to_currency(transaction.amount) %></td>
      </tr>
    <% end %>
  </table>
</div>
