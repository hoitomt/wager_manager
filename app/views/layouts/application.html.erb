<!DOCTYPE html>
<html>
  <head>
    <title>Wagerly</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= javascript_pack_tag 'tickets' %>
  </head>

  <body>
    <%= render 'layouts/navbar' %>
    <main role="main" class="container">
      <% if notice %>
        <p class="notice"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert"><%= alert %></p>
      <% end %>
      <%= yield %>
    </main>

  </body>
</html>
